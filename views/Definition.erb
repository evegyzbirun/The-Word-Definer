<h2> Definition: <%= @defin.name() %> </h2>
<h3> Word: <%= @defin.word.name() %></h3>




<form action="/words/<%= @defin.word.id %>/definitions/<%= @defin.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="defin_name">Edit definition</label>
  <input id="defin_name" name="defin_name" type="text">
  
  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @defin.word.id() %>/definitions/<%= @defin.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete definition </button>
</form>
<a href="/words<%= @defin.word.id %>">Back to<%= @defin.word.name %></a>
