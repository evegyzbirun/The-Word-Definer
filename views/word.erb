<h4>Word Name: <%= @word.name %></h4>



<h3>Word Definitions</h3>

  <% if @word.definitions %>
    <ul>
      <% @word.definitions.each do |defins| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= defins.id %>"><%= defins.name %></a></li>
       <% end %>
    </ul>
  <% else %>
    <p>There are no definitions listed for this word yet.</p>
  <% end %>

<h4>Add a definition:</h4>

<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <label for="defin_name">Definition name</label>
    <input id="defin_name" name="defin_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add definition</button>
</form>

<p><a href="/words/<%= @word.id %>/edit">Edit the word</a></p>
<p><a href="/words">Return to the word list</a></p>
